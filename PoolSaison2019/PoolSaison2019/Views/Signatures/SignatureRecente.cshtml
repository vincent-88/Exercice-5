@{
    <h1>Dernière signature de contrat</h1>
    @if ((string)ViewData["id"] != "-1" && (string)ViewData["id"] != "99")
    {
        <table >
            <tr>
                <td>Numéro: @ViewData["id"]</td>
            </tr>
            <tr>
                <td>Nom: @ViewData["name"]</td>
            </tr>
            <tr>
                <td>Équipe: @ViewData["ville"]</td>
</tr>
        </table>
    }
    else
    {
        <p>Signature en cours mais non officialisée</p>
    }
}


